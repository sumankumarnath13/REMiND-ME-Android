<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_enabled="true">
        <ripple tools:targetApi="lollipop" android:color="?attr/accentColor">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/themeBackground" />
                    <corners android:radius="@dimen/dp_32" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dp_1" android:color="?attr/accentColor" />
                    <corners android:radius="@dimen/dp_32" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <ripple tools:targetApi="lollipop" android:color="?attr/borderColor">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/themeBackground" />
                    <corners android:radius="@dimen/dp_32" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dp_1" android:color="?attr/borderColor" />
                    <corners android:radius="@dimen/dp_32" />
                </shape>
            </item>
        </ripple>
    </item>

</selector>

