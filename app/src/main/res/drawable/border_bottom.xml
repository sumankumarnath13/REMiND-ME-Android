<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/dp_05"
                android:color="?attr/themeBorderColor" />
        </shape>
    </item>
    <item android:bottom="@dimen/dp_05">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/dp_05"
                android:color="?attr/themeBackgroundColor" />
            <solid android:color="?attr/themeBackgroundColor" />
        </shape>
    </item>
</layer-list>

