        <item name="colorAccent">
            ?attr/themeAccentColor
        </item>
        <item name="colorControlNormal">
            ?attr/themeControlNormalColor
        </item>
        <item name="colorControlHighlight">
            ?attr/themeAccentColor
        </item>
        <item name="android:colorBackground">
            ?attr/themeDialogBackgroundColor
        </item> <!-- drop down and context menu background -->
        <item name="android:colorForeground">
            ?attr/themeSoothingText
        </item> <!-- This somehow affects switch off bar color -->
        <item name="actionBarStyle">
            @style/ActionBarStyle
        </item>
        <!-- To set all text hints including the action bar search view hint color.
        Couldn't find any way to do the same acton bar dedicated styling -->
        <item name="android:textColorHint">
            ?attr/themeDimText
        </item>
        <item name="android:textViewStyle">
            @style/TextViewStyle
        </item>
        <item name="android:editTextStyle">
            @style/EditTextStyle
        </item>
        <item name="android:textCursorDrawable">
            @null
        </item> <!-- Make edit text cursor color neutral to accent color -->

        <!--        <item name="android:numberPickerStyle" tools:targetApi="n">-->
        <!--            @style/NumberPickerStyle-->
        <!--        </item>-->

        <item name="android:buttonStyle">
            @style/buttonStyle
        </item>
        <item name="android:checkboxStyle">
            @style/checkBoxStyle
        </item>
        <item name="android:radioButtonStyle">
            @style/radioButtonStyle
        </item>
        <item name="imageButtonStyle">
            @style/ImageButtonStyle
        </item>
        <item name="switchStyle">
            @style/switchStyle
        </item>
        <item name="android:alertDialogTheme">
            @style/DialogStyle
        </item>
        <item name="android:timePickerStyle" tools:targetApi="lollipop">
            @style/TimePickerStyle
        </item>
        <item name="android:datePickerStyle" tools:targetApi="lollipop">
            @style/DatePickerStyle
        </item>
    </style>

