    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:windowContentOverlay">
            @null
        </item> <!-- Remove title bar shadow -->

        <!--        <item name="height">50dp--> <!-- To increase action bar height. Not required now -->
        <!--        </item>-->

        <!-- action bar background - without android prefix -->
        <item name="background">
            ?attr/themeBackgroundColor
        </item>
        <!-- action bar elevation - without android prefix -->
        <item name="elevation">
            0dp
        </item>
        <item name="subtitleTextStyle">
            @style/ActionBarSubTitleTextStyle
        </item>
        <item name="colorControlNormal">
            ?attr/themeSoothingText
        </item>
    </style>

    <style name="ActionBarSubTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">
            ?attr/themeDimText
        </item>
        <item name="android:textSize"> <!-- Important! Without this the action bar height isn't calculated well and some part of the text can stay hidden under action bar height -->
            @dimen/font_size_small
        </item>
    </style>

    <style name="NoActionBarStyle" parent="BlackTheme">
        <item name="windowActionBar">
            false
        </item>
        <item name="windowNoTitle">
            true
        </item>
    </style>

    <style name="NoActionBarLightStyle" parent="LightTheme">
        <item name="windowActionBar">
            false
        </item>
        <item name="windowNoTitle">
            true
        </item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">
            ?attr/themeDialogBackgroundColor
        </item> <!-- Changes background color -->
        <item name="colorControlHighlight">
            ?attr/themeAccentColor
        </item>
        <item name="colorControlNormal">
            ?attr/themeDisabledControlColor
        </item>
        <item name="android:windowTitleStyle">
            @style/DialogTitleTextStyle
        </item>
        <item name="android:textSize">
            @dimen/font_size_medium
        </item>
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>
        <item name="dialogCornerRadius">
            @dimen/dp_8
        </item>
    </style>

    <style name="DialogTitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">
            @dimen/font_size_medium
        </item>
        <item name="android:textColor">
            ?attr/themeDimText
        </item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">
            @dimen/font_size_medium
        </item>
        <item name="android:textColorHint">
            ?attr/themeDimText
        </item>
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>
    </style>

    <style name="NumberPickerStyle" parent="Theme.AppCompat">
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>

    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">
            @dimen/dp_8
        </item> <!-- Android apply default mid height of buttons making it much larger that needed. This is to override that issue -->
        <item name="android:background">
            @drawable/rounded_button_background_selector
        </item>
        <item name="android:padding">
            @dimen/dp_8
        </item>
        <item name="android:paddingStart">
            @dimen/dp_16
        </item>
        <item name="android:paddingEnd">
            @dimen/dp_16
        </item>
        <item name="android:textSize">
            @dimen/font_size_small
        </item>
        <item name="android:textColor">
            @drawable/button_text_color_selector
        </item>
    </style>

    <style name="SmallButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">
            0dp
        </item> <!-- Android apply default mid height of buttons making it much larger that needed. This is to override that issue -->
        <item name="android:minWidth">
            0dp
        </item>
        <item name="android:background">
            @drawable/rounded_button_background_selector
        </item>
        <item name="android:padding">
            @dimen/dp_3
        </item>
        <item name="android:paddingStart">
            @dimen/dp_8
        </item>
        <item name="android:paddingEnd">
            @dimen/dp_8
        </item>
        <item name="android:textSize">
            @dimen/font_size_extra_small
        </item>
        <item name="android:textColor">
            @drawable/button_text_color_selector
        </item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:minHeight">
            0dp
        </item> <!-- Android apply default mid height of buttons making it much larger that needed. This is to override that issue -->
        <item name="android:padding">
            @dimen/dp_3
        </item>
        <item name="paddingStart">
            @dimen/dp_8
        </item>
        <item name="paddingEnd">
            @dimen/dp_8
        </item>
        <item name="android:background">
            @drawable/rounded_button_background_selector
        </item>
        <item name="android:scaleType">
            center
        </item>
    </style>

    <style name="checkBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">
            @dimen/font_size_medium
        </item>
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>
        <item name="buttonTint">
            @drawable/compound_button_tint_color_selector
        </item>
    </style>

    <style name="switchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textSize">
            @dimen/font_size_medium
        </item>
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>
        <item name="thumbTint">
            @drawable/compound_button_tint_color_selector
        </item>
    </style>

    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">
            @dimen/font_size_medium
        </item>
        <item name="android:textColor">
            ?attr/themeSoothingText
        </item>
        <item name="buttonTint">
            @drawable/compound_button_tint_color_selector
        </item>
    </style>

    <style name="TimePickerStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">
            ?attr/themeDialogBackgroundColor
        </item> <!-- Changes background color -->
        <item name="colorControlActivated">
            ?attr/themeSuccessColor
        </item> <!-- Change selection/cursor color -->
        <item name="tint">
            ?attr/themeAccentColor
        </item> <!-- Change mode switch color for time picker-->
        <item name="colorAccent">
            ?attr/themeAccentColor
        </item> <!-- Change OK/Cancel button color -->
        <item name="android:textColorPrimary">
            ?attr/themeSoothingText
        </item>
        <item name="android:textColorSecondary">
            ?attr/themeDimText
        </item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">
            ?attr/themeDialogBackgroundColor
        </item> <!-- Changes background color -->
        <item name="colorControlActivated">
            ?attr/themeSuccessColor
        </item> <!-- Change selection/cursor color -->
        <item name="colorAccent">
            ?attr/themeAccentColor
        </item> <!-- Change OK/Cancel button color -->
        <item name="android:textColorPrimary">
            ?attr/themeSoothingText
        </item>
        <item name="android:textColorSecondary">
            ?attr/themeDimText
        </item>
    </style>

    <style name="AccentFab" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="rippleColor">
            ?attr/themeBackgroundColor
        </item>
        <item name="backgroundTint">
            ?attr/themeAccentColor
        </item>
        <item name="backgroundColor">
            ?attr/themeAccentColor
        </item>
        <item name="tint">
            @android:color/white
        </item>
    </style>

</resources>