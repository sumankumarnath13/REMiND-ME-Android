<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BlackTheme" parent="Theme.AppCompat">
        <item name="themeSuccessColor">
            @color/colorSuccess
        </item>
        <item name="themeCuriosityColor">
            @color/colorCuriosity
        </item>
        <item name="themeWarningColor">
            @color/colorWarning
        </item>
        <item name="themeDangerColor">
            @color/colorDanger
        </item>
        <item name="themeAccentColor">
            @color/colorAccent
        </item>
        <item name="themeBackgroundColor">
            @color/colorBackground
        </item>
        <item name="themeDialogBackgroundColor">
            @color/colorDialogBackground
        </item>
        <item name="themeControlNormalColor">
            @color/colorThemeControlNormal
        </item>
        <item name="themeDisabledControlColor">
            @color/colorDisabledControl
        </item>
        <item name="themeBorderColor">
            @color/colorBorder
        </item>
        <item name="themeBrightText">
            @color/colorBrightText
        </item>
        <item name="themeSoothingText">
            @color/colorSoothingText
        </item>
        <item name="themeDimText">
            @color/colorDimText
        </item>


        <item name="android:windowLightStatusBar" tools:targetApi="m">
            false
        </item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            ?attr/themeBackgroundColor
        </item>
        <item name="colorPrimaryDark">
            ?attr/themeBackgroundColor
        </item> <!-- Changes background color or app bar and title -->
        <item name="android:windowBackground">
            ?attr/themeBackgroundColor
        </item>
        <item name="colorPrimary">
            ?attr/themeBackgroundColor
        </item> <!-- Changes background color or app bar and title -->

        <!-- ********************************************* -->
        <!--        <item name="android:textColor">-->
        <!--            ?attr/themeSoothingText-->
        <!--        </item>-->
