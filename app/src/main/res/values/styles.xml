<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BlackTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/theme_background
        </item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="colorAccent">@color/accent_color</item> <!-- Set button colors etc -->
        <item name="colorPrimaryDark">@color/theme_background
        </item> <!-- Changes background color or app bar and title -->
        <item name="colorPrimary">@color/theme_background
        </item> <!-- Changes background color or app bar and title -->
        <item name="android:textCursorDrawable">@null
        </item> <!-- Make edit text cursor color neutral to accent color -->


        <item name="themeBackground">@color/theme_background</item>
        <item name="borderColor">@color/border_color</item>
        <item name="brightText">@color/text_bright</item>
        <item name="accentColor">@color/accent_color</item>
        <item name="dimText">@color/text_dim</item>
        <item name="soothingText">@color/text_soothing</item>


        <item name="android:buttonStyle">@style/commonButtonStyle</item>
        <item name="android:alertDialogTheme">@style/BlackDialog</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <item name="android:statusBarColor" tools:targetApi="m">@color/theme_background_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@color/theme_background_light</item>
        <item name="colorAccent">@color/accent_color_light</item> <!-- Set button colors etc -->
        <item name="colorPrimaryDark">@color/text_soothing_light
        </item> <!-- Changes background color or app bar and title -->
        <item name="colorPrimary">@color/theme_background_light
        </item> <!-- Changes background color or app bar and title -->
        <item name="android:textCursorDrawable">@null
        </item> <!-- Make edit text cursor color neutral to accent color -->

        <item name="themeBackground">@color/theme_background_light</item>
        <item name="borderColor">@color/border_color_light</item>
        <item name="brightText">@color/text_bright_light</item>
        <item name="accentColor">@color/accent_color_light</item>
        <item name="dimText">@color/text_dim_light</item>
        <item name="soothingText">@color/text_soothing_light</item>

        <item name="android:buttonStyle">@style/commonButtonStyle_light</item>
        <item name="android:alertDialogTheme">@style/LightDialog</item>
    </style>

    <style name="commonButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="commonButtonStyle_light" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="colorAccent">@color/accent_color_light</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="BlackTheme.NoActionBar" parent="BlackTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme.NoActionBar" parent="LightTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="BlackDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/bg_dialog
        </item> <!-- Changes background color -->
        <item name="android:textColorPrimary">@color/text_soothing</item>
        <item name="colorAccent">@color/bg_info</item>
        <item name="colorPrimary">@color/bg_danger</item>
        <item name="colorPrimaryDark">@color/bg_success</item>

    </style>

    <style name="LightDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/theme_background_light
        </item> <!-- Changes background color -->
        <item name="android:textColorPrimary">@color/text_soothing_light</item>
        <item name="colorAccent">@color/bg_info</item>
        <item name="colorPrimary">@color/bg_danger</item>
        <item name="colorPrimaryDark">@color/bg_success</item>
    </style>


    <style name="TimePickerDialogBlack" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/bg_dialog
        </item> <!-- Changes background color -->
        <item name="colorControlActivated">@color/bg_success
        </item> <!-- Change selection/cursor color -->
        <item name="tint">@color/accent_color
        </item> <!-- Change mode switch color for time picker-->
        <item name="colorAccent">@color/accent_color
        </item> <!-- Change OK/Cancel button color -->
        <item name="android:textColorPrimary">@color/text_bright</item>
        <item name="android:textColorSecondary">@color/text_soothing</item>
    </style>

    <style name="TimePickerDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/theme_background_light
        </item> <!-- Changes background color -->
        <item name="colorControlActivated">@color/bg_success
        </item> <!-- Change selection/cursor color -->
        <item name="tint">@color/accent_color_light
        </item> <!-- Change mode switch color for time picker-->
        <item name="colorAccent">@color/accent_color_light
        </item> <!-- Change OK/Cancel button color -->
        <item name="android:textColorPrimary">@color/text_bright_light</item>
        <item name="android:textColorSecondary">@color/text_soothing_light</item>

        <!--        <item name="colorControlNormal">@color/bg_warning-->
        <!--        </item> &lt;!&ndash; Change clock's analog mode spinner down arrow color and inputs border bottom color | Not required here, but keeping as important information &ndash;&gt;-->
        <!--        <item name="buttonTint">@color/text_danger-->
        <!--        </item>&lt;!&ndash; Change mode switch color for time picker in some devices > It seems this has no effects at all &ndash;&gt;-->

    </style>

    <style name="DatePickerDialogBlack" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/bg_dialog
        </item> <!-- Changes background color -->
        <item name="colorControlActivated">@color/bg_success
        </item> <!-- Change selection/cursor color -->
        <item name="colorAccent">@color/accent_color</item> <!-- Change OK/Cancel button color -->
        <item name="android:textColorPrimary">@color/text_bright</item>
        <item name="android:textColorSecondary">@color/text_soothing</item>
    </style>

    <style name="DatePickerDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/theme_background_light
        </item> <!-- Changes background color -->
        <item name="colorControlActivated">@color/bg_success
        </item> <!-- Change selection/cursor color -->
        <item name="colorAccent">@color/accent_color_light
        </item> <!-- Change OK/Cancel button color -->
        <item name="android:textColorPrimary">@color/text_bright_light</item>
        <item name="android:textColorSecondary">@color/text_soothing_light</item>
        <!--                <item name="colorPrimary">@color/theme_background_light</item>-->
