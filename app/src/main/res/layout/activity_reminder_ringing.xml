<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/dp_16"
    tools:context=".ui.activities.ActivityReminderRinging">

    <!-- Header aligned to top -->
    <!--    <RelativeLayout-->
    <!--        android:id="@+id/reminder_ringing_header"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentTop="true"-->
    <!--        android:gravity="center"-->
    <!--        android:layout_marginBottom="@dimen/dp_16">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/dp_8"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/text_gray2" />

        <TextView
            android:id="@+id/tv_reminder_ringing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text="@string/reminder_alert_heading"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/txt_reminder_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/dp_8"
            android:textSize="@dimen/font_size_extra_large"
            android:textColor="@color/text_gray1" />

        <TextView
            android:id="@+id/tv_reminder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_large"
            android:layout_marginVertical="@dimen/dp_8"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/txt_reminder_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/dp_8" />

    </LinearLayout>

    <!-- Footer aligned to bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_reminder_ringing_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:drawableStart="@drawable/ic_reminder_dismiss"
            android:drawableLeft="@drawable/ic_reminder_dismiss"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTint="@color/text_danger"
            android:text="@string/btn_alarm_action_dismiss"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_reminder_ringing_snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_reminder_snooze"
            android:drawableLeft="@drawable/ic_reminder_snooze"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTint="@color/text_warning"
            android:text="@string/reminder_snooze_menu_caption"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>