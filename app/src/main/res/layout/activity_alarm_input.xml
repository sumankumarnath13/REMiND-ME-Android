<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.ReminderInput">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_clippedPaddingBottom">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Date and Time inputs at top -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_8">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reminder_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:padding="0dp"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_5"
                        android:text="10:10"
                        android:textColor="?attr/themeSoothingText"
                        android:textSize="@dimen/font_size_banner" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_reminder_AmPm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="AM"
                        android:textColor="?attr/themeDimText"
                        android:textSize="@dimen/font_size_medium" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reminder_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@null"
                    android:padding="0dp"
                    android:text="Wed, 13 Oct 1994"
                    android:textSize="@dimen/font_size_medium" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lvc_diff_next_reminder_trigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/border_vertical"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/dp_8"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/label_has_calculated_time"
                        android:textColor="?attr/themeAccentColor"
                        android:textSize="@dimen/font_size_small" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_reminder_trigger_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:textSize="@dimen/font_size_large"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_reminder_trigger_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/themeDimText"
                            android:textSize="@dimen/font_size_small" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!--                <androidx.appcompat.widget.LinearLayoutCompat-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:gravity="center_horizontal"-->
                <!--                    android:orientation="horizontal"-->
                <!--                    android:paddingVertical="@dimen/dp_8">-->

                <!--                    <androidx.appcompat.widget.AppCompatButton-->
                <!--                        android:id="@+id/btnCalculate"-->
                <!--                        style="@style/SmallButtonStyle"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginHorizontal="@dimen/dp_3"-->
                <!--                        android:text="Calculate" />-->

                <!--                </androidx.appcompat.widget.LinearLayoutCompat>-->

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Other inputs -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- NAME -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/mnu_reminder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_16">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_reminder_name_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint="@string/caption_hint_reminder_name"
                            android:textSize="@dimen/font_size_medium" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_reminder_name_voice_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/missing_image_desc"
                        app:srcCompat="@drawable/ic_mic" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- Is notification -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_16">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remind me as " />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder"
                        app:buttonTint="?attr/themeWarningColor" />


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/chk_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alarm"
                        app:buttonTint="?attr/themeAccentColor" />


                    <!--                    <androidx.appcompat.widget.SwitchCompat-->
                    <!--                        android:id="@+id/sw_notification"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content" />-->

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- REPEAT -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/mnu_reminder_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom_with_ripple"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_8">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/missing_image_desc"
                        app:srcCompat="@drawable/ic_reminder_repeat" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/heading_repeat_settings" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/sw_reminder_repeat"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_reminder_repeat_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="?attr/themeDimText"
                            android:textSize="@dimen/font_size_small" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- EXTRA EXPAND BUTTON -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_reminder_extra_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/missing_image_desc"
                app:srcCompat="@drawable/ic_expand_down" />

            <!-- EXTRA INPUTS -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lv_reminder_extra_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- NOTE -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/mnu_reminder_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/dp_16">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_reminder_note_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:hint="@string/caption_hint_reminder_note" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_reminder_note_voice_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/missing_image_desc"
                        app:srcCompat="@drawable/ic_mic"
                        app:tint="?attr/themeWarningColor" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- EXTRA TIME -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom_with_ripple"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/dp_8">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/caption_time_list"
                            android:textSize="@dimen/font_size_small" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/chk_time_list_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours"
                            app:buttonTint="?attr/themeSuccessColor" />

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/chk_time_list_anytime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Any time"
                            app:buttonTint="?attr/themeDangerColor" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_reminder_time_list_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="9:00 AM, 10:00 PM"
                        android:textColor="?attr/themeDimText"
                        android:textSize="@dimen/font_size_extra_small" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/alarm_only_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- SNOOZE -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/snooze_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/missing_image_desc"
                            app:srcCompat="@drawable/ic_reminder_snooze" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/heading_snooze_settings" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_snooze"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_snooze_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/themeDimText"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- TONE -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/tone_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missing_image_desc"
                            app:srcCompat="@drawable/ic_reminder_sound" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/caption_tone" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/imgBtnPlayStop"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginHorizontal="@dimen/dp_8"
                                    android:contentDescription="@string/missing_image_desc"
                                    android:tint="@drawable/button_play_tint_color_selector"
                                    app:srcCompat="@drawable/ic_play" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSetDefaultTone"
                                    style="@style/SmallButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dp_8"
                                    android:enabled="false"
                                    android:text="Use Default" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_tone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_tone_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/themeDimText"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- VOLUME -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/alarm_volume_inputs_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_16">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missing_image_desc"
                            app:srcCompat="@drawable/ic_sound_volume" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/dp_117"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:text="@string/caption_tone_volume" />

                        <androidx.appcompat.widget.AppCompatSeekBar
                            android:id="@+id/seeker_alarm_volume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- AUTO VOLUME -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/auto_volume_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_16">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missing_image_desc"
                            app:srcCompat="@drawable/ic_sound_volume_auto" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_weight="1"
                            android:text="@string/caption_tone_auto_volume" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_gradually_increase_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- Ring Duration -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ring_duration_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_16">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missing_image_desc"
                            app:srcCompat="@drawable/ic_ring_duration" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/caption_tone_duration" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/ring_duration_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- VIBRATE -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/vibrate_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missing_image_desc"
                            app:srcCompat="@drawable/ic_reminder_vibrate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="@string/caption_vibrate" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/vibrate_pattern_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_reminder_vibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <!-- Footer aligned to bottom -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imgBtnSetReminder"
        style="@style/AccentFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/dp_16"
        android:contentDescription="@string/missing_image_desc"
        app:srcCompat="@drawable/ic_set" />

</RelativeLayout>