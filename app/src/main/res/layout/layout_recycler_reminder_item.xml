<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp">
            <TextView
                android:id="@+id/tv_reminder_time"
                android:textColor="@color/text_success"
                android:textSize="23sp"
                android:layout_height="match_parent"
                android:layout_width="231dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/img_snooze"
                android:src="@drawable/ic_reminder_snooze"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@+id/tv_reminder_next_snooze"
                android:layout_toLeftOf="@+id/tv_reminder_next_snooze"
                android:gravity="center_vertical"
                app:tint="@color/bg_warning">
            </ImageView>
            <TextView
                android:id="@+id/tv_reminder_next_snooze"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/text_warning"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@+id/sw_reminder_enabled"
                android:layout_toLeftOf="@+id/sw_reminder_enabled"
                android:gravity="center_vertical"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_reminder_enabled"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical">
            </androidx.appcompat.widget.SwitchCompat>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_reminder_name"
        android:textColor="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_reminder_truncated_note"
        android:textColor="@color/text_gray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

