<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_reminder_time"
            android:textColor="@color/text_success"
            android:textSize="@dimen/font_size_medium"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="start" />

        <ImageView
            android:id="@+id/img_snooze"
            android:src="@drawable/ic_reminder_snooze"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
                app:tint="@color/bg_warning">
            </ImageView>

        <TextView
            android:id="@+id/tv_reminder_next_snooze"
            android:layout_marginHorizontal="@dimen/dp_3"
            android:textColor="@color/text_warning"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_reminder_enabled"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_reminder_name"
        android:textColor="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_reminder_truncated_note"
        android:textColor="@color/text_gray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

