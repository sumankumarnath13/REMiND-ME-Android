<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.activities.ActivityReminderView">

    <!-- Footer aligned to bottom -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@drawable/border_bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8">

                <!--    TIME-->
                <TextView
                    android:id="@+id/tv_reminder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_soothing"
                    android:textSize="@dimen/font_size_banner" />

                <!--    DATE-->
                <TextView
                    android:id="@+id/tv_reminder_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dim"
                    android:textSize="@dimen/font_size_medium" />

                <!--    NAME-->
                <TextView
                    android:id="@+id/tv_reminder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textColor="@color/text_bright"
                    android:textSize="@dimen/font_size_large"
                    android:visibility="gone" />

                <!--    ENABLE/DISABLE-->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_reminder_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_expired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="expired"
                    android:textColor="@color/bg_danger"
                    android:visibility="gone" />

                <!--    LAST MISSED ALERT -->
                <LinearLayout
                    android:id="@+id/lv_last_missed_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Missed on : "
                        android:textColor="@color/text_danger"
                        android:textSize="@dimen/font_size_small" />

                    <TextView
                        android:id="@+id/tv_reminder_last_missed_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_dim"
                        android:textSize="@dimen/font_size_small" />

                    <ImageView
                        android:id="@+id/btn_expand_missed_alerts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_expand_down"
                        android:visibility="gone"
                        app:tint="@color/bg_success" />

                </LinearLayout>

            </LinearLayout>

            <!--    ALL MISSED ALERTS -->
            <TextView
                android:id="@+id/tv_missed_alerts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/text_dim"
                android:textSize="@dimen/font_size_small"
                android:visibility="visible" />

            <!--    REMINDER DETAILS -->
            <LinearLayout
                android:id="@+id/lv_reminder_details"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!--    SNOOZE SUMMARY-->
                <LinearLayout
                    android:id="@+id/mnu_reminder_snooze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:gravity="center_vertical"
                                android:text="@string/btn_snooze"
                                android:textColor="@color/text_dim"
                                android:textSize="@dimen/font_size_medium" />

                            <TextView
                                android:id="@+id/tv_reminder_next_snooze"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="@color/text_warning"
                                android:textSize="@dimen/font_size_medium" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_reminder_snooze_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/text_soothing"
                            android:textSize="@dimen/font_size_small" />

                    </LinearLayout>

                </LinearLayout>

                <!--    REPEAT SUMMARY-->
                <LinearLayout
                    android:id="@+id/mnu_reminder_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/btn_repeat"
                            android:textColor="@color/text_dim"
                            android:textSize="@dimen/font_size_medium" />

                        <TextView
                            android:id="@+id/tv_reminder_repeat_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/text_soothing"
                            android:textSize="@dimen/font_size_small" />

                    </LinearLayout>

                </LinearLayout>

                <!--    NOTE SUMMARY-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Note"
                    android:textColor="@color/text_dim"
                    android:textSize="@dimen/font_size_medium" />

                <TextView
                    android:id="@+id/tv_reminder_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dim"
                    android:textSize="@dimen/font_size_small" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    REMINDER DETAILS SIGNS FOOTER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_vertical"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/dp_8"
            android:paddingVertical="@dimen/dp_3"
            android:orientation="horizontal">

            <!-- TONE DETAILS LAYOUT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tone : "
                android:textColor="@color/text_dim"
                android:textSize="@dimen/font_size_extra_small" />

            <TextView
                android:id="@+id/tv_reminder_tone_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_soothing"
                android:textSize="@dimen/font_size_extra_small" />

            <!-- TONE EXTRA DETAILS LAYOUT -->
            <LinearLayout
                android:id="@+id/lv_alarm_tone_is_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vol : "
                    android:textColor="@color/text_dim"
                    android:textSize="@dimen/font_size_extra_small" />

                <TextView
                    android:id="@+id/tv_alarm_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_success"
                    android:textSize="@dimen/font_size_extra_small" />

            </LinearLayout>

            <!-- VIBRATION DETAILS LAYOUT -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vibrate : "
                    android:textSize="@dimen/font_size_extra_small"
                    android:textColor="@color/text_dim" />

                <TextView
                    android:id="@+id/tv_reminder_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_extra_small" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rv_reminder_container_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_reminder_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:drawableStart="@drawable/ic_close"
                android:drawableLeft="@drawable/ic_close"
                android:drawablePadding="@dimen/dp_3"
                android:drawableTint="@color/bg_danger"
                android:gravity="start|center"
                android:text="@string/btn_delete"
                android:textAlignment="textStart"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_reminder_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:drawableStart="@drawable/ic_reminder_check"
                android:drawableLeft="@drawable/ic_reminder_check"
                android:drawablePadding="@dimen/dp_3"
                android:drawableTint="@color/bg_warning"
                android:gravity="start|center"
                android:text="@string/btn_edit"
                android:textAlignment="textStart"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>