<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingHorizontal="13dp"
    tools:context=".ActivityReminderView">

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/rv_reminder_container_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/appbar_padding"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_reminder_display_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIEW"
            android:textSize="19sp" />

    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/rv_reminder_container_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_reminder_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/appbar_padding"
                android:drawableLeft="@drawable/ic_reminder_del"
                android:drawablePadding="@dimen/appbar_padding"
                android:drawableTint="@color/text_danger"
                android:text="Delete" />

            <Button
                android:id="@+id/btn_reminder_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/appbar_padding"
                android:drawableLeft="@drawable/ic_reminder_change"
                android:drawablePadding="@dimen/appbar_padding"
                android:drawableTint="@color/text_warning"
                android:text="EDIT" />

            <Button
                android:id="@+id/btn_reminder_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/appbar_padding"
                android:layout_weight="1"
                android:drawableTint="@color/text_warning"
                android:text="BACK" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Scrollable Content below header and above footer -->
    <ScrollView
        android:id="@+id/sv_reminder_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rv_reminder_container_footer"
        android:layout_below="@id/rv_reminder_container_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reminder_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_success"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_snooze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="S"
                    android:src="@drawable/ic_reminder_snooze"
                    app:tint="@color/bg_warning"></ImageView>

                <TextView
                    android:id="@+id/tv_reminder_next_snooze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/text_warning" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_reminder_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></androidx.appcompat.widget.SwitchCompat>

            <TextView
                android:id="@+id/tv_reminder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_reminder_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/appbar_padding"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>