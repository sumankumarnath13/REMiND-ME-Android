<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.activities.ReminderInput">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <!-- Scrollable Content below header and above footer -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!-- Date and Time inputs at top -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reminder_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="@string/btn_time"
                        android:textColor="?attr/themeBrightText"
                        android:textSize="@dimen/font_size_banner" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reminder_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:background="@null"
                        android:text="@string/btn_date"
                        android:textSize="@dimen/font_size_medium" />


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lvc_diff_next_reminder_trigger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background_selector"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/dp_8"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/heading_calculated_alarm_time"
                            android:textColor="?attr/themeAccentColor"
                            android:textSize="@dimen/font_size_small" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_trigger_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:textSize="@dimen/font_size_large"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_trigger_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/themeDimText"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCalculate"
                            style="@style/SmallButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:text="Calculate" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTimeHours"
                            style="@style/SmallButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:text="Hours" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTimeList"
                            style="@style/SmallButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dp_3"
                            android:text="List" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- Other inputs -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- NAME -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/mnu_reminder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_name_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:hint="@string/hint_reminder_name"
                                android:textSize="@dimen/font_size_medium" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_reminder_name_voice_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_mic"
                            app:tint="@color/colorSuccessLight" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- NOTE -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/mnu_reminder_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_note_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:hint="@string/hint_reminder_note"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_reminder_note_voice_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_mic"
                            app:tint="@color/colorWarningLight" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- Is notification -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="As notification" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!-- REPEAT -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/mnu_reminder_repeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_reminder_repeat" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/btn_repeat" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_repeat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_repeat_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/themeDimText"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <!-- EXTRA EXPAND BUTTON -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_reminder_extra_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:contentDescription="@string/missingImageDesc"
                    app:srcCompat="@drawable/ic_expand_down"
                    app:tint="@color/colorSuccessLight" />

                <!-- EXTRA INPUTS -->
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lv_reminder_extra_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!--            SNOOZE-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/mnu_reminder_snooze"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_reminder_snooze" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/btn_snooze" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_snooze"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_snooze_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/themeDimText"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!--            TONE-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/mnu_reminder_tone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_reminder_sound" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/btn_alarm_sound" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/imgBtnPlayStop"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginHorizontal="@dimen/dp_8"
                                    android:contentDescription="@string/missingImageDesc"
                                    android:tint="@drawable/button_play_tint_color_selector"
                                    app:srcCompat="@drawable/ic_play" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnSetDefaultTone"
                                    style="@style/SmallButtonStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/dp_8"
                                    android:text="Use Default"
                                    android:enabled="false" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_tone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_reminder_tone_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/themeDimText"
                                android:textSize="@dimen/font_size_small" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!--            VOLUME-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/alarm_volume_inputs_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_sound_volume" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/dp_117"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:text="@string/alarm_volume_label" />

                        <androidx.appcompat.widget.AppCompatSeekBar
                            android:id="@+id/seeker_alarm_volume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!--            AUTO VOLUME-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_sound_volume_auto" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_weight="1"
                            android:text="@string/increase_volume_gradually_label" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_gradually_increase_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <!--            Ring Duration-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_ring_duration" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Ring duration" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/ring_duration_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <!--            VIBRATE-->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missingImageDesc"
                            app:srcCompat="@drawable/ic_reminder_vibrate" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="@string/btn_vibrate" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/vibrate_pattern_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_reminder_vibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- Footer aligned to bottom -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/rv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/dp_16">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reminder_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_reminder_check"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="start|center"
            android:text="@string/btn_save"
            app:drawableTint="@color/colorSuccessLight" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>