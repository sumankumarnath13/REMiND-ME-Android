<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_context_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        app:backgroundTint="?attr/themeDisabledControlColor"
        app:srcCompat="@drawable/ic_close" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_context_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        app:backgroundTint="?attr/themeDisabledControlColor"
        app:srcCompat="@drawable/ic_reminder_check" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_context_btn_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        app:backgroundTint="?attr/themeDisabledControlColor"
        android:tint="?attr/themeSuccessColor"
        app:srcCompat="@drawable/ic_expand_up" />

</LinearLayout>