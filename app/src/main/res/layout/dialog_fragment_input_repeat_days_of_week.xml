<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_sunday" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_mon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_monday" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_tue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_tuesday" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_wed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_wednesday" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_thu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_thursday" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_fri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_friday" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chk_daily_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonTint="?attr/themeSuccessColor"
            android:text="@string/caption_saturday" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>

