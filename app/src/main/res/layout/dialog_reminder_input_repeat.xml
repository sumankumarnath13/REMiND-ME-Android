<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_8"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdo_reminder_repeat_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/bg_success"
                android:textColor="?attr/soothingText"
                android:textSize="@dimen/font_size_medium"
                android:text="@string/repeat_off" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_hourly"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/bg_warning"
                    android:textColor="?attr/soothingText"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_hourly" />

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_hourly_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_hourly_custom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_daily"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:buttonTint="@color/bg_info"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_daily" />

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_daily_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_daily_custom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_weekly"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_weekly" />

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_weekly_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_weekly_custom" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_monthly"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:buttonTint="@color/bg_warning"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_monthly" />

                <RadioButton
                    android:id="@+id/rdo_reminder_repeat_monthly_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/soothingText"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_medium"
                    android:text="@string/repeat_monthly_custom" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/rdo_reminder_repeat_yearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/soothingText"
                android:buttonTint="@color/bg_danger"
                android:textSize="@dimen/font_size_medium"
                android:text="@string/repeat_yearly" />

            <RadioButton
                android:id="@+id/rdo_reminder_repeat_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/soothingText"
                android:textSize="@dimen/font_size_medium"
                android:text="@string/repeat_other" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="?attr/borderColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_has_repeat_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="?attr/soothingText"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_repeat_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:textColor="?attr/soothingText"
                android:text="End Time " />

            <TextView
                android:id="@+id/tv_end_time_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_size_large"
                android:textColor="?attr/brightText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_repeat_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:textColor="?attr/soothingText"
                android:text="End Date " />

            <TextView
                android:id="@+id/tv_end_date_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/font_size_medium"
                android:textColor="?attr/dimText" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>






