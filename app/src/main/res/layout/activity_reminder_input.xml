<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dp_16"
    tools:context=".ActivityReminderInput">

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/rv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_reminder_heading"
            android:textSize="@dimen/font_size_h1" />
    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/rv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/btn_reminder_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:drawableStart="@drawable/ic_reminder_check"
            android:drawableLeft="@drawable/ic_reminder_check"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTint="@color/text_success"
            android:text="@string/btn_save" />

    </RelativeLayout>

    <!-- Scrollable Content below header and above footer -->
    <ScrollView
        android:id="@+id/sv_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rv_footer"
        android:layout_below="@id/rv_header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_51"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tv_reminder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/hint_reminder_name"
                android:backgroundTint="@color/text_success"
                android:hint="@string/hint_reminder_name"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_white" />

            <EditText
                android:id="@+id/tv_reminder_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/hint_reminder_note"
                android:backgroundTint="@color/text_dark"
                android:hint="@string/hint_reminder_note"
                android:inputType="textLongMessage|textMultiLine"
                android:textColor="@color/text_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_51"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reminder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:drawableStart="@drawable/ic_reminder_time"
                    android:drawableLeft="@drawable/ic_reminder_time"
                    android:drawablePadding="@dimen/dp_16"
                    android:drawableTint="@color/text_warning"
                    android:text="@string/btn_time" />

                <Button
                    android:id="@+id/btn_reminder_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:drawableStart="@drawable/ic_reminder_date"
                    android:drawableLeft="@drawable/ic_reminder_date"
                    android:drawablePadding="@dimen/dp_16"
                    android:text="@string/btn_date" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mnu_reminder_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="113dp"
                    android:src="@drawable/ic_reminder_repeat"
                    app:tint="@color/bg_success" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_repeat"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/font_size_h2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_reminder_repeat_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/font_size_s1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mnu_reminder_snooze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="113dp"
                    android:src="@drawable/ic_reminder_snooze"
                    app:tint="@color/bg_warning" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_snooze"
                        android:textSize="@dimen/font_size_h2"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_reminder_snooze_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/font_size_s1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_reminder_vibrate"
                    app:tint="@color/text_dark"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_h2"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="@string/btn_vibration" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_reminder_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_reminder_dismiss"
                    app:tint="@color/text_danger"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_size_h2"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="@string/btn_disable"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_reminder_disable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>