<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.activities.ActivityReminderInput">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <!-- Scrollable Content below header and above footer -->
        <ScrollView
            android:id="@+id/sv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!-- Date and Time inputs at top -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_reminder_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="?attr/brightText"
                        android:text="@string/btn_time"
                        android:textSize="@dimen/font_size_banner" />

                    <Button
                        android:id="@+id/btn_reminder_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textColor="?attr/soothingText"
                        android:text="@string/btn_date"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:textSize="@dimen/font_size_medium" />

                    <Button
                        android:id="@+id/btnCalculate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_success"
                        android:text="calculate"
                        android:layout_marginBottom="@dimen/dp_16"
                        style="@style/smallButtonStyle" />

                    <LinearLayout
                        android:id="@+id/lvc_diff_next_reminder_trigger"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded"
                        android:paddingVertical="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/heading_calculated_alarm_time"
                            android:textColor="?attr/accentColor"
                            android:textSize="@dimen/font_size_small" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_reminder_trigger_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_success"
                                android:textSize="@dimen/font_size_extra_large"
                                android:textStyle="bold"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8" />

                            <TextView
                                android:id="@+id/tv_reminder_trigger_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_success"
                                android:textSize="@dimen/font_size_medium" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <!-- Other inputs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- NAME -->
                    <LinearLayout
                        android:id="@+id/mnu_reminder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_reminder_name_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/hint_reminder_name"
                                android:gravity="center_vertical"
                                android:textColor="?attr/soothingText"
                                android:textSize="@dimen/font_size_medium" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_reminder_name_voice_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mic"
                            app:tint="@color/bg_success" />

                    </LinearLayout>

                    <!-- NOTE -->
                    <LinearLayout
                        android:id="@+id/mnu_reminder_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_reminder_note_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:hint="@string/hint_reminder_note"
                                android:textColor="?attr/soothingText"
                                android:textSize="@dimen/font_size_small" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_reminder_note_voice_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_mic"
                            app:tint="@color/bg_warning" />

                    </LinearLayout>

                    <!-- REPEAT -->
                    <LinearLayout
                        android:id="@+id/mnu_reminder_repeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_reminder_repeat"
                            app:tint="@color/bg_info" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/btn_repeat"
                                    android:textColor="?attr/soothingText"
                                    android:textSize="@dimen/font_size_medium" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_repeat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_reminder_repeat_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/dimText"
                                android:textSize="@dimen/font_size_small" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- EXTRA EXPAND BUTTON -->
                <ImageView
                    android:id="@+id/btn_reminder_extra_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_down"
                    app:tint="@color/bg_success" />

                <!-- EXTRA INPUTS -->
                <LinearLayout
                    android:id="@+id/lv_reminder_extra_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <!--            SNOOZE-->
                    <LinearLayout
                        android:id="@+id/mnu_reminder_snooze"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_reminder_snooze" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/btn_snooze"
                                    android:textColor="?attr/soothingText"
                                    android:textSize="@dimen/font_size_medium" />


                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_snooze"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_reminder_snooze_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/dimText"
                                android:textSize="@dimen/font_size_small" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--            TONE-->
                    <LinearLayout
                        android:id="@+id/mnu_reminder_tone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_reminder_sound" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/btn_alarm_sound"
                                    android:textColor="?attr/soothingText"
                                    android:textSize="@dimen/font_size_medium" />

                                <Button
                                    android:id="@+id/btnSetDefaultTone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:layout_marginEnd="@dimen/dp_8"
                                    style="@style/smallButtonStyle"
                                    android:text="Use Default" />

                                <ImageButton
                                    android:id="@+id/imgBtnPlayStop"
                                    android:layout_width="35dp"
                                    android:layout_height="23dp"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:layout_marginEnd="@dimen/dp_8"
                                    android:src="@drawable/ic_play" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/sw_reminder_tone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_reminder_tone_summary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="?attr/dimText"
                                android:textSize="@dimen/font_size_small" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--            VOLUME-->
                    <LinearLayout
                        android:id="@+id/alarm_volume_inputs_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_sound_volume" />

                        <TextView
                            android:layout_width="@dimen/dp_117"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:text="@string/alarm_volume_label"
                            android:textColor="?attr/soothingText"
                            android:textSize="@dimen/font_size_medium" />

                        <SeekBar
                            android:id="@+id/seeker_alarm_volume"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <!--            AUTO VOLUME-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_sound_volume_auto" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_weight="1"
                            android:text="@string/increase_volume_gradually_label"
                            android:textColor="?attr/soothingText"
                            android:textSize="@dimen/font_size_medium" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_gradually_increase_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <!--            Ring Duration-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_ring_duration" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Ring duration"
                            android:textColor="?attr/soothingText"
                            android:textSize="@dimen/font_size_medium" />

                        <Spinner
                            android:id="@+id/ring_duration_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <!--            VIBRATE-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_16"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_reminder_vibrate" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="@string/btn_vibrate"
                            android:textColor="?attr/soothingText"
                            android:textSize="@dimen/font_size_medium" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_weight="1">

                            <Spinner
                                android:id="@+id/vibrate_pattern_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/sw_reminder_vibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <!-- Footer aligned to bottom -->
    <LinearLayout
        android:id="@+id/rv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_reminder_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_reminder_check"
            android:drawableLeft="@drawable/ic_reminder_check"
            android:drawablePadding="@dimen/dp_3"
            android:drawableTint="@color/bg_success"
            android:gravity="start|center"
            android:text="@string/btn_save" />

    </LinearLayout>

</LinearLayout>